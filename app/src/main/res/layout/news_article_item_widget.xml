<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/article_image_widget"
        android:contentDescription="@string/article_image_desc"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/article_titletext_widget"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:paddingStart="@dimen/article_marginStart"
        android:paddingEnd="@dimen/article_marginStart"
        android:textSize="14sp"/>
    
    

</LinearLayout>